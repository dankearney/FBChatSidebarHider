{
  "name": "Facebook Chat Sidebar Hider",
  "short_name" : "ChatShh",
  "version": "0.0.3",
  "icons" : {"128" : "128.png",
             "16" : "16.png",
             "48" : "48.png"},
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["jquery.min.js","hide.js"]
    }
  ],
  "browser_action": {
      "name": "FBChat Sidebar Hider",
      "default_icon": "128.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2
}
